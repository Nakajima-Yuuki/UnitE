<h2>プロフィール編集<!--<%= resource_name.to_s.humanize %>--></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "proposers/shared/error_messages", resource: resource %>
  

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name, autofocus: true,:placeholder => "名前を入力" %>
  </div>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", :placeholder => "メールアドレスを入力" %>
  </div>

  <div class="field">
    <%= f.label :プロフィール %><br />
    <%= f.text_area :profile, autofocus: true, :placeholder => "プロフィールを入力" %>
  </div>

  <div class="field">
  <%= f.label :アイコン %><br />
  <%= f.file_field :avatar, autofocus: true %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field">
    <%= f.label :password %> <i>(変更したくない場合は空白のままにします)</i><br />
    <%= f.password_field :password, autocomplete: "new-password", :placeholder => "パスワードを入力" %>
    <% if @minimum_password_length %>
      <br />
      <em><%= @minimum_password_length %> 文字以上</em>
    <% end %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", :placeholder => "パスワードを入力" %>
  </div>

  <div class="field">
    <%= f.label :current_password %> <i>(変更を確認するには、現在のパスワードが必要です)</i><br />
    <%= f.password_field :current_password, autocomplete: "current-password", :placeholder => "パスワードを入力" %>
  </div>

  <div class="actions">
    <%= f.submit "更新" %>
  </div>
<% end %>

<p><%= button_to "アカウント削除", registration_path(resource_name), data: { confirm: "本当に削除しますか?" }, method: :delete %></p>

