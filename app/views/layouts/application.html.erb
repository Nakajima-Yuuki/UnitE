<!DOCTYPE html>
<html>
  <head>
    <title>UniteApp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
        <header>
        <div class="container-fluid">
          <nav class="navbar fixed-top bg-white p-0 pt-0 pb-0 mt-0">
            <a class="navbar-brand bg-white d-block mx-auto" href=""><%= image_tag "mojilogo.png", width: 100; %></a>
              
        <div class="hamburger">
         <span></span>
         <span></span>
         <span></span>
        </div>
<nav class="globalMenuSp">
    <ul>
        <% if user_signed_in? %>
        <li><a href="#"><%= link_to "マイページ", user_path(current_user.id), data: {"turbolinks"=>false} %></a></li>
         <hr>
        <li><a href="#"><%= link_to '投稿一覧', outfits_path, data: {"turbolinks"=>false} %></a></li>
        <hr>
        <li><a href="#"><%= link_to 'ログアウト', destroy_user_session_path, method: :delete, data: {"turbolinks"=>false} %></a></li>
        <% elsif proposer_signed_in? %>
        <li><a href="#"><%= link_to '新規投稿', new_outfit_path, data: {"turbolinks"=>false} %></a></li>
        <hr>
        <li><a href="#"><%= link_to '投稿一覧', outfits_path, data: {"turbolinks"=>false} %></a></li>
        <hr>
        <li><a href="#"><%= link_to "マイページ", proposer_path(current_proposer.id), data: {"turbolinks"=>false} %></a></li>
        <hr>
        <li><a href="#"><%= link_to 'ログアウト', destroy_proposer_session_path, method: :delete, data: {"turbolinks"=>false} %></a></li>
        <% else %>
        <li><a href="#"><%= link_to 'Userログイン', new_user_session_path%></a></li>
        <hr>
        <li><a href="#"><%= link_to 'Fashionistaログイン', new_proposer_session_path %></a></li>
        <% end %>
    </ul>
</nav>
        </header>
    </div>
    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>
    <%= yield %>
        <br><br><br>
    <footer class="fixed text-center text-dark bg-light p-3 mt-3">
    ©️2021 UnitE All Rights Reserved.
    </footer>
  </body>
</html>
